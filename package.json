{
  "name": "cuda-profiler",
  "displayName": "cuda-profiler",
  "description": "Lightweight CUDA profiler wrapper",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": ["Other"],

  "activationEvents": [
    "onCommand:cudaProfiler.runNsys",
    "onCommand:cudaProfiler.openPanel"
  ],

  "main": "./dist/extension.js",

  "contributes": {
    "commands": [
      {
        "command": "cudaProfiler.runNsys",
        "title": "CUDA Profiler: Run Nsight Systems (Kernel Summary)"
      },
      {
        "command": "cudaProfiler.openPanel",
        "title": "CUDA Profiler: Open Panel"
      }
    ],
    "configuration": {
      "title": "CUDA Profiler",
      "properties": {
        "cudaProfiler.command": {
          "type": "string",
          "default": "",
          "description": "Command to run your CUDA app (e.g. .\\\\build\\\\app.exe --arg 1)."
        },
        "cudaProfiler.cwd": {
          "type": "string",
          "default": "${workspaceFolder}",
          "description": "Working directory for the run command."
        },
        "cudaProfiler.outputDir": {
          "type": "string",
          "default": ".vscode/cuda-profiler",
          "description": "Output folder for profiler reports."
        },
        "cudaProfiler.nsysPath": {
          "type": "string",
          "default": "",
          "description": "Optional full path to nsys.exe."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cudaProfilerContainer",
          "title": "CUDA Profiler",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "cudaProfilerContainer": [
        {
          "id": "cudaProfilerView",
          "name": "Kernel Summary"
        }
      ]
    }
  },

  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },

  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
